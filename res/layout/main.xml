<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
	xmlns:android="http://schemas.android.com/apk/res/android"
	android:id="@+id/root_view"
	android:layout_width="fill_parent"
	android:layout_height="fill_parent"
>
	<org.geometerplus.zlibrary.ui.android.view.ZLAndroidWidget
		android:id="@+id/main_view"
		android:layout_width="fill_parent"
		android:layout_height="fill_parent"
		android:focusable="true"
		android:scrollbars="vertical"
		android:scrollbarAlwaysDrawVerticalTrack="true"
		android:fadeScrollbars="false"
	/>
	<LinearLayout 
	   	   android:id="@+id/book_image2"
	       android:layout_width="100dp"
		   android:layout_height="fill_parent"
		   android:background="@drawable/mypic"
		   android:orientation="horizontal"
		   android:visibility="gone"
		   android:alpha="0"
		  
		>
	</LinearLayout>
	<LinearLayout 
	    android:id="@+id/my_booklist"
	    android:layout_width="fill_parent"
	    android:layout_height="40dp"
		android:background="#000000"
		android:orientation="horizontal"
		android:alpha="20"
	    
	    >
	 
	    <ImageView 
	        android:id="@+id/return_booklist"
	        android:layout_width="30dp"
		    android:layout_height="40dp"
		    android:background="@drawable/backbookstore"
		    android:layout_weight="1"  
	        />
	     <TextView 
	        android:id="@+id/book_name"
	   	    android:layout_width="50dp"
		    android:layout_height="40dp"
		    android:layout_marginLeft="5dp"
		    android:layout_weight="6"
		    android:ellipsize="marquee" 
            android:focusable="true" 
            android:marqueeRepeatLimit="marquee_forever" 
            android:focusableInTouchMode="true" 
            android:scrollHorizontally="true"
            android:text=""
	        />
	     <ImageView 
	        android:id="@+id/shuqian"
	        android:layout_width="30dp"
		    android:layout_height="40dp"
		    android:background="@drawable/shuqian"
		    android:layout_marginLeft="5dp"
		    android:layout_weight="1"
		    />
	</LinearLayout>

<ImageView 
    
    	    android:id="@+id/book_image"
	        android:layout_width="40dp"
		    android:layout_height="40dp"
		    android:layout_centerInParent="true"
		    android:background="@drawable/mypic"
			android:alpha="0"
    
    />
<SeekBar
        android:id="@+id/seekBar2"
        android:layout_width="180dip"
        android:layout_height="wrap_content"
        android:layout_marginTop="200dp"
        android:layout_centerInParent="true"
        android:max="10" 
        android:progress="10"
        android:visibility="gone">
    </SeekBar>


</RelativeLayout>
